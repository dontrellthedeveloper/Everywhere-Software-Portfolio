
<div class="col-sm-8 blog-main">

  <nav class="breadcrumb row">
    <div class='col'>
      <%= link_to "All Blogs", blogs_path, class: 'breadcrumb-item text-new-bg' %>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item text-new-bg' %>

      <span class="breadcrumb-item active"><%= @blog.title %></span>

      <span class="float-right">
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), class: 'text-new-bg' if logged_in?(:site_admin) %>
        <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' }, class: 'text-new-bg' if logged_in?(:site_admin) %>
    </span>
    </div>
  </nav>

  <p>
    <%= markdown @blog.body %>
  </p>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>




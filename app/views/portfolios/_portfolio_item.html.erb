<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%=	portfolio_item.id  %>">
    <%= link_to portfolio_show_path(portfolio_item) do %>
    <%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), width: '100%' %>
    <% end %>
    <div class="card-body">
      <p class="card-text text-muted">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: 'text-new-bg' %></span>
        <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <small class="text-muted"></small>
      </div>
    </div>
  </div>
</div>




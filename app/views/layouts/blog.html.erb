<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title><%= @page_title %></title>
  <%= csrf_meta_tags %>

  <meta name="keywords" content="<%= @seo_keywords %>" />

  <%=	 favicon_link_tag 'favicons/other_favicon.ico'  %>

  <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<!-- start of nav -->
<%= render 'shared/blog_nav' %>
<!-- end of nav -->

<!-- start of blog header -->
<%= render 'shared/blog_masthead' %>
<!-- end of blog header -->

<div class="container main-margin-t">

  <div class="row">

    <%= yield %>

    <!-- start of sidebar -->
    <%=	render 'shared/blog_sidebar'  %>
    <!-- end of sidebar -->
  </div>

  <!-- start of footer -->
  <%= render 'shared/blog_footer' %>
  <!-- end of footer -->

  <%=	 alerts %>

</div>
</body>
</html>